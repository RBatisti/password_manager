<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane minHeight="600" minWidth="500" prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateUserController">
    <!-- MenuBar fixado no topo -->
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>
   <left>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="43.0" prefWidth="340.0" text="Create your Account" textOverrun="CLIP">
               <font>
                  <Font name="Segoe UI" size="35.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="100.0" top="60.0" />
               </VBox.margin></Label>
            <HBox prefHeight="15.0" prefWidth="200.0">
               <children>
                  <Label text="Email">
                     <font>
                        <Font name="Tahoma" size="12.0" />
                     </font></Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="142.0" />
               </padding>
            </HBox>
            <TextField fx:id="email" maxHeight="25.0" maxWidth="220.0" minHeight="25.0" minWidth="220.0" prefHeight="25.0" prefWidth="220.0" promptText="Insert your email">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <HBox layoutX="10.0" layoutY="213.0" prefHeight="15.0" prefWidth="200.0">
               <children>
                  <Label text="Password">
                     <font>
                        <Font name="Tahoma" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="142.0" />
               </padding>
            </HBox>
            <PasswordField fx:id="passwordField1" maxHeight="82.0" maxWidth="220.0" minHeight="25.0" minWidth="220.0" prefHeight="25.0" prefWidth="220.0" promptText="Insert your master password">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin></PasswordField>
            <HBox layoutX="10.0" layoutY="265.0" prefHeight="15.0" prefWidth="200.0">
               <children>
                  <Label text="Repeat">
                     <font>
                        <Font name="Tahoma" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="142.0" />
               </padding>
            </HBox>
            <PasswordField fx:id="passwordField2" layoutX="150.0" layoutY="278.0" maxHeight="82.0" maxWidth="220.0" minHeight="25.0" minWidth="220.0" prefHeight="25.0" prefWidth="220.0" promptText="Repeat your master password">
               <VBox.margin>
                  <Insets bottom="12.0" />
               </VBox.margin>
            </PasswordField>
            <Button mnemonicParsing="false" onAction="#create" text="Create Account">
               <VBox.margin>
                  <Insets bottom="80.0" top="25.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="500.0">
               <children>
                  <Label text="Already have an account?">
                     <font>
                        <Font name="Tahoma" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin></Label>
                  <Button mnemonicParsing="false" onAction="#goToMain" text="Login" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
